<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignInActivity">
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/emailid_signin"
              android:hint="Email "
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:layout_marginRight="10dp"
              android:inputType="textEmailAddress"
              android:background="@drawable/inputs_background"
              android:layout_marginLeft="10dp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/password_signin"
              android:hint="Password"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:layout_marginRight="10dp"
              android:inputType="textPassword"
              android:layout_below="@+id/emailid_signin"
              android:background="@drawable/inputs_background"
              android:layout_marginLeft="10dp"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signin_btn_signin"
            android:layout_below="@+id/password_signin"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Sign In"
            android:layout_marginRight="10dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/signup_btn_signin"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Need New Account? Sign Up"
            android:layout_marginBottom="20dp"
    />


</RelativeLayout>