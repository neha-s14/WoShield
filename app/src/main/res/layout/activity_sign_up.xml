<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/full_name_signup"
              android:hint="Full Name "
              android:layout_marginTop="20dp"
              android:padding="10dp"
              android:layout_marginRight="10dp"
              android:inputType="textPersonName"
              android:background="@drawable/inputs_background"
              android:layout_marginLeft="10dp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/emailid_signup"
              android:layout_below="@+id/full_name_signup"
              android:hint="Email "
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:layout_marginRight="10dp"
              android:inputType="textEmailAddress"
              android:background="@drawable/inputs_background"
              android:layout_marginLeft="10dp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/phone_number_signup"
              android:hint="Phone Number"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/emailid_signup"
              android:padding="10dp"
              android:layout_marginRight="10dp"
              android:inputType="phone"
              android:background="@drawable/inputs_background"
              android:layout_marginLeft="10dp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/password_signup"
              android:hint="Password"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:layout_marginRight="10dp"
              android:inputType="textPassword"
              android:layout_below="@+id/phone_number_signup"
              android:background="@drawable/inputs_background"
              android:layout_marginLeft="10dp"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/signup_btn_signup"
            android:layout_below="@+id/password_signup" android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Sign Up"
            android:layout_marginRight="10dp"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/signin_btn_signup"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Already Have an Account? Sign In"
            android:layout_marginBottom="20dp"
    />


</RelativeLayout>